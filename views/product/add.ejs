<section class="container" id="AddProduct">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">


                    <form class="" action="/product/create" method="post" enctype="multipart/form-data">
                        <div class="form-group md-form">
                            <input class="form-control" type="text" name="description" value="" id="DescriptionField">
                            <label for="DescriptionField">Descrição</label>
                        </div>
                        <div class="form-group md-form">
                            <input class="form-control" type="text" name="price" value="" id="PriceField">
                            <label for="PriceField">Preço</label>
                        </div>
                        <div class="form-group md-form">
                            <input class="form-control" type="text" name="color" value="" id="ColorField">
                            <label for="ColorField">Cor</label>
                        </div>

                        <div class="form-group md-form">
                            <select class="form-control" type="text" name="state" value="" id="StateField">
                                <option value="new">Novo</option>
                                <option value="used">Usado</option>
                            </select>
                        </div>


                        <div class="form-group md-form">
                            <select class="form-control" type="text" name="ProductType">
                                <% _.each(productTypes, function(type) { %>
                                    <option value="<%= type.id %>"><%= type.name %> <%= type.version %></option>
                                <% }) %>
                            </select>
                        </div>

                        <input type="hidden" name="_csrf" value="<%= _csrf %>"></input>

                        <div class="form-group md-form">
                            <input class="form-control" type="file" name="photo" value="" id="PhotoField">
                            <label for="PhotoField">Foto</label>
                        </div>

                        <div class="form-group md-form">
                            <button type="submit" class="btn btn-primary btn-full-width" name="button">CADASTRAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
