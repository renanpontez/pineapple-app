<%
    var productTypesNames = ['iPhone','iPad','iPod'];
 %>
<section class="container" id="AddProduct">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">

                    <div class="errors">
                        <% if (req.session.flash && req.session.flash.error) { %>
                            <div class="alert alert-danger">
                                <%=req.flash('error')%>
                            </div>
                        <% } %>
                    </div>

                    <form class="form-type-new" action="/producttype/create" method="post" enctype="multipart/form-data">
                        <div class="form-group md-form">
                            <small>Nome</small>
                            <select class="form-control" type="text" name="name" value="" id="NameField">
                                <% _.each(productTypesNames, function(typeName) { %>
                                         <option value="<%= typeName %>"><%= typeName %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group md-form">
                            <small>Vers√£o</small>
                            <select class="form-control" type="text" name="version" value="" id="VersionField">
                                <option value="4">4</option>
                                <option value="4S">4S</option>
                                <option value="5">5</option>
                                <option value="5S">5S</option>
                                <option value="5C">5C</option>
                                <option value="6">6</option>
                                <option value="6 Plus">6 PLUS</option>
                                <option value="6S">6S</option>
                                <option value="6S">6S PLUS</option>
                                <option value="7">7</option>
                                <option value="7 Plus">7 PLUS</option>
                            </select>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= _csrf %>"></input>


                        <div class="form-group md-form">
                            <button type="submit" class="btn btn-primary btn-full-width" name="button">CADASTRAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
