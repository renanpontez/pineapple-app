<section class="container" id="AddProduct">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">

                    <div class="errors">
                        <% if (req.session.flash && req.session.flash.error) { %>
                            <div class="alert alert-danger">
                                <%=req.flash('error')%>
                            </div>
                        <% } %>
                    </div>

                    <form class="form-type-new" action="/producttype/create" method="post" enctype="multipart/form-data">
                        <div class="form-group md-form">
                            <small>Nome</small>
                            <input type="text" name="name" value="" class="form-control" id="NameField">
                        </div>
                        <div class="form-group md-form">
                            <small>Modelo</small>
                            <input type="text" name="version" value="" class="form-control" id="VersionField" >
                        </div>
                        <input type="hidden" name="_csrf" value="<%= _csrf %>"></input>


                        <div class="form-group md-form">
                            <button type="submit" class="btn btn-primary btn-full-width" name="button">CADASTRAR</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
