<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-title">Tipos de Produtos</h1>
        </div>
    </div>
    <% if(productTypes.length == 0){ %>
        <div class="col-md-12">
            <p>Nenhum tipo de produto foi cadastrado.</p>
        </div>
    <% } else{ %>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Vers√£o
                    </th>
                    <th>
                        Criado em:
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% _.each(productTypes, function(type) { %>
                    <tr>
                        <td><%= type.name %></td>
                        <td><%= type.version %></td>
                        <td><%= type.createdAt.toLocaleString('pt-BR') %></td>
                        <td>
                            <a href="/producttype/edit/<%= type.id %>" class="edit-productype-btn">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% }  %>

</div>
